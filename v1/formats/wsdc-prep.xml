<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.2">
  <name>World Schools with Prep Times</name>
  <short-name>WSDC with Prep</short-name>
  <version>1</version>
  <info>
    <region>Estonia</region>
    <level>High School</level>
    <used-at>Estonian High School Debate Championships</used-at>
    <description>3 vs 3, 6-minute speeches, 3-minute replies, 1-minute preps, POIs allowed</description>
  </info>
  <prep-time length="30:00"/>
  <speech-types>
    <speech-type ref="substantive" length="6:00" first-period="normal">
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="5:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="reply" length="3:00" first-period="normal">
      <bell time="2:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
	<speech-type ref="prep" length="1:00" first-period="normal">
      <bell time="1:00" number="1" next-period="warning"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="substantive">
      <name>1st Affirmative</name>
    </speech>
    <speech type="prep">
      <name>Negative Prep</name>
    </speech>
    <speech type="substantive">
      <name>1st Negative</name>
    </speech>
    <speech type="prep">
      <name>Affirmative Prep</name>
    </speech>
    <speech type="substantive">
      <name>2nd Affirmative</name>
    </speech>
    <speech type="prep">
      <name>Negative Prep</name>
    </speech>
    <speech type="substantive">
      <name>2nd Negative</name>
    </speech>
    <speech type="prep">
      <name>Affirmative Prep</name>
    </speech>
    <speech type="substantive">
      <name>3rd Affirmative</name>
    </speech>
    <speech type="prep">
      <name>Negative Prep</name>
    </speech>
    <speech type="substantive">
      <name>3rd Negative</name>
    </speech>
    <speech type="prep">
      <name>Negative Prep</name>
    </speech>
    <speech type="reply">
      <name>Negative Leader's Reply</name>
    </speech>
    <speech type="prep">
      <name>Affirmative Prep</name>
    </speech>
    <speech type="reply">
      <name>Affirmative Leader's Reply</name>
    </speech>
  </speeches>
</debate-format>
