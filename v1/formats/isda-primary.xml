<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.2">
  <name>Independent Schools Debating Association (Primary A and B)</name>
  <short-name>ISDA Primary A and B</short-name>
  <version>1</version>
  <info>
    <region>NSW, Australia</region>
    <level>Years 5-6</level>
    <used-at>Independent Schools Debating Association, NSW, Australia</used-at>
    <description>3 vs 3, 4-minute speeches, no replies, no POIs</description>
  </info>
  <period-types>
    <period-type ref="nsw.1bell">
      <name>NSW 1 Bell</name>
      <default-bgcolor>#CCAA00</default-bgcolor>
    </period-type>
  </period-types>
  <prep-time length="45:00"/>
  <speech-types>
    <speech-type ref="speech" length="4:15" first-period="normal">
      <bell time="2:00" number="1" next-period="nsw.1bell"/>
      <bell time="4:00" number="2" next-period="warning"/>
      <bell time="finish" number="15" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="speech">
      <name>1st Affirmative</name>
    </speech>
    <speech type="speech">
      <name>1st Negative</name>
    </speech>
    <speech type="speech">
      <name>2nd Affirmative</name>
    </speech>
    <speech type="speech">
      <name>2nd Negative</name>
    </speech>
    <speech type="speech">
      <name>3rd Affirmative</name>
    </speech>
    <speech type="speech">
      <name>3rd Negative</name>
    </speech>
  </speeches>
</debate-format>
